---
import {getUser} from '../supabase';
const user = await getUser(Astro.request);

import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro" user={user as object}>
    <main class="h-screen flex flex-col w-max align-center justify-center mx-auto gap-3">
        <h1 class="text-xl">Welcome to Astro</h1>
        <p>Hope you are having a good day { user?.email }</p>
        <a href="/register" class="btn">Signup</a>
        <a href="/login" class="btn">Login</a>
				{ user && <a href="/logout" class="btn">Logout</a>}
    </main>
</Layout>
